{
    "manifest_version": 2,
    "name": "Domain Time Tracker",
    "version": "1.0",
    "description": "Tracks the time spent on each domain",
    "permissions": ["tabs", "storage"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "popup.html"
    }
  }
  